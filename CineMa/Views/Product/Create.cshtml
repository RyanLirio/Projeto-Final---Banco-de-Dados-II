@model Cine_Ma.Models.Product

<h1>Criando Produto</h1>

<hr />

<div class="row">
    <form asp-action="Create" asp-controller="Product">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-md-12">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Price" class="control-label">Preço</label>
            <input asp-for="Price" id="PriceInput" class="form-control" type="text" oninput="formatPrice(this)" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <script>
            function formatPrice(input) {
                let value = input.value.replace(/\D/g, '');

                if (value.length > 2) {
                    value = value.slice(0, -2) + ',' + value.slice(-2);
                }

                input.value = value;
            }
        </script>
        <div class="form-group col-md-6">
            <label asp-for="Discount" class="control-label"></label>
            <input asp-for="Discount" class="form-control" />
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input type="submit" value="Criar" class="btn btn-primary" />
        </div>
    </form>
</div>
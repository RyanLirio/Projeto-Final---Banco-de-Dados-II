@model Cine_Ma.Models.Sex

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["ActiveMenu"] = "Sex";
    ViewData["Title"] = "Gênero";
}

<h1 class="texto">Atualizando Gênero</h1>

<hr />

<div class="row">
    <form asp-action="Update" asp-controller="Sex" asp-route-id="@Model.Id" class="form-padrao">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <p class="fw-bold texto">ID: <span class="fw-light">@Model.Id</span></p>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label texto">Nome</label>
                <input asp-for="Name" class="form-control inputs-padrao" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <a class="btn btn-purple float-end ms-2 texto" asp-controller="Sex" asp-action="IndexAdmin">Voltar</a>
            <input type="submit" value="Atualizar" class="btn btn-red float-end texto" />
        </div>
    </form>
</div>
@model Cine_Ma.Models.Language

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["ActiveMenu"] = "Language";
    ViewData["Title"] = "Linguagem";
}

<h1 class="texto">Criando Idioma</h1>

<hr />

<div class="row">
    <form asp-action="Create" asp-controller="Language" class="form-padrao">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-md-12">
            <label asp-for="Name" class="control-label texto"></label>
            <input asp-for="Name" class="form-control inputs-padrao" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">

            <input type="submit" value="Criar" class="btn btn-red float-end" />
        </div>
    </form>
</div>
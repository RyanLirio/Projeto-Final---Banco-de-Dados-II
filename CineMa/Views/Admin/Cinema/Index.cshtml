@model ICollection<Cine_Ma.Models.Cinema>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["ActiveMenu"] = "Cinema";
    ViewData["Title"] = "Cinema";
    int count = 0;
}
<div class="text-center container">
    <a asp-controller="Cinema" asp-action="Create">Novo</a>
    <div class="row  px-0 text-center tabela-escura d-flex align-items-center tabela-borda">
        <div class="col-1">
            <p class="fw-bold py-3 m-0">Id</p>
        </div>
        <div class="col-2">
            <p class="fw-bold py-3 m-0">Nome</p>
        </div>
        <div class="col-2">
            <p class="fw-bold py-3 m-0">CNPJ</p>
        </div>
        <div class="col-2">
            <p class="fw-bold py-3 m-0">Telefone</p>
        </div>
        <div class="col-3">
            <p class="fw-bold py-3 m-0">E-mail</p>
        </div>
        <div class="col-2">
            <p class="fw-bold py-3 m-0">Açoes</p>
        </div>
    </div>
    @foreach (var c in Model)
    {
        if ((count % 2) == 0)
        {
            <div class="row  px-0 tabela-clara d-flex align-items-center tabela-borda" data-bs-toggle="collapse" data-bs-target="#detalhesCinema_@c.Id" style="cursor: pointer;">
                <div class="col-1">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Id</p>
                </div>
                <div class="col-2">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Name</p>
                </div>
                <div class="col-2">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Cnpj</p>
                </div>
                <div class="col-2">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Phone</p>
                </div>
                <div class="col-3">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Email</p>
                </div>
                <div class="col-2">
                    <a asp-controller="Cinema"
                       asp-action="Update"
                       class="btn btn-purple btn-sm me-1"
                       asp-route-id="@c.Id">

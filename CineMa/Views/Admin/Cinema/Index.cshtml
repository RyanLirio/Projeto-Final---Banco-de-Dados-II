                        </svg>
                    </a>
                    <form asp-controller="Cinema"
                          asp-action="Delete"
                          method="post"
                          class="d-inline"
                          onsubmit="return confirm('Tem certeza que deseja excluir este registro?');">

                        <input type="hidden" name="id" value="@c.Id" />

                        <button type="submit" class="btn btn-red btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                    </form>
                </div>
                <div class="col-6" >
                    <p class="py-3 tw-bold m-0" style=" font-size: 15px !important;">Endereço: <span class="tw-normal"> @c.Address?.Road @c.Address?.Number, @c.Address?.City, @c.Address?.State.ToUpper() @c.Address?.ZipCode, @c.Address?.Descripton</span></p>
                </div>
                <div class="col-6 text-end">
                    <form asp-controller="Room" asp-action="Create" method="get" class="d-inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <button type="submit" class="btn btn-success btn-sm">
                            + Adicionar Sala
                        </button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="row  px-0 tabela-escura d-flex align-items-center tabela-borda" data-bs-toggle="collapse" data-bs-target="#detalhesCinema_@c.Id" style="cursor: pointer;">
                <div class="col-1">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Id</p>
                </div>
                <div class="col-1">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Name</p>
                </div>
                <div class="col-2">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Cnpj</p>
                </div>
                <div class="col-1">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Phone</p>
                </div>
                <div class="col-3">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Email</p>
                </div>
                <div class="col-2">
                    <p class=" py-3 m-0" style=" font-size: 15px !important;">@c.Address?.Road @c.Address?.Number, @c.Address?.City, @c.Address?.State @c.Address?.ZipCode, @c.Address?.Descripton</p>
                </div>
                <div class="col-2">
                    <a asp-controller="Cinema"
                       asp-action="Update"
                       class="btn btn-purple btn-sm me-1"
                       asp-route-id="@c.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                        </svg>
                    </a>
                    <form asp-controller="Cinema"
                          asp-action="Delete"
                          method="post"
                          class="d-inline"
                          onsubmit="return confirm('Tem certeza que deseja excluir este registro?');">

                        <input type="hidden" name="id" value="@c.Id" />

                        <button type="submit" class="btn btn-red btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                    </form>
                </div>
                <div class="col-6">
                    <p class="py-3 tw-bold m-0" style=" font-size: 15px !important;">Endereço: <span class="tw-normal"> @c.Address?.Road @c.Address?.Number, @c.Address?.City, @c.Address?.State?.ToUpper() @c.Address?.ZipCode, @c.Address?.Descripton</span></p>
                </div>
                <div class="col-6 text-end">
                    <form asp-controller="Room" asp-action="Create" method="get" class="d-inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <button type="submit" class="btn btn-success btn-sm">
                            + Adicionar Sala
                        </button>
                    </form>             
                </div>
            </div>
        }
        <div id="detalhesCinema_@c.Id" class="collapse row px-0 py-2" style="background: #323539; min-width: 100%;">
            <div class="col-4">
                <p class="fw-bold m-0" style="font-size: 14px !important;">Número Sala</p>
            </div>
            <div class="col-4">
                <p class="fw-bold m-0" style="font-size: 14px !important;">Quantidade Cadeiras</p>
            </div>
            <div class="col-4" style="font-size: 14px !important;">
                <p class="fw-bold m-0" style="font-size: 14px !important;">Ações</p>
            </div>
            @foreach (var r in c.Rooms)
            {
                <div class="col-4 mt-2">
                    <p class="mb-0" style="font-size: 14px !important;">@r.RoomNumber</p>
                </div>
                <div class="col-4 mt-2">
                    <p class="mb-0" style="font-size: 14px !important;">@r.Chairs.Count()</p>
                </div>
                <div class="col-4 mt-2">
                    <a asp-controller="Room"
                       asp-action="IndexAdmin"
                       asp-route-roomId="@r.Id"
                       class="btn btn-green btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                        </svg>
                    </a>
                    <a asp-controller="Room"
                       asp-action="Update"
                       class="btn btn-purple btn-sm me-1"
                       asp-route-id="@r.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                        </svg>
                    </a>
                    <form asp-controller="Room"
                          asp-action="Delete"
                          method="post"
                          class="d-inline"
                          onsubmit="return confirm('Tem certeza que deseja excluir este registro?');">

                        <input type="hidden" name="id" value="@r.Id" />

                        <button type="submit" class="btn btn-red btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                    </form>
                </div>
            }
        </div>

        count++;
    }
</div>

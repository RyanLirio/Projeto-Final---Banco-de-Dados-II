@model Cine_Ma.Models.Product

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["ActiveMenu"] = "Products";
    ViewData["Title"] = "Produtos";
}

<h1 class="texto">Atualizando Produto</h1>

<hr />

<div class="row">
    <form asp-action="Update" asp-controller="Product" asp-route-id="@Model.Id" class="form-padrao">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <p class="fw-bold texto">ID: <span class="fw-light">@Model.Id</span></p>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label texto">Nome</label>
                <input asp-for="Name" class="form-control inputs-padrao" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="form-group col-md-6">
                <label asp-for="Price" class="control-label texto">Preço</label>
                <input asp-for="Price" id="PriceInput" class="form-control inputs-padrao" type="text" oninput="formatPrice(this)" value="@Model.Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <script>
                function formatPrice(input) {
                    let value = input.value.replace(/\D/g, '');

                    if (value.length > 2) {
                        value = value.slice(0, -2) + ',' + value.slice(-2);
                    }

                    input.value = value;
                }
            </script>
            <div class="form-group col-md-6">
                <label asp-for="Discount" class="control-label texto">Desconto</label>
                <input asp-for="Discount" class="form-control inputs-padrao" value="@Model.Discount" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <a class="btn btn-purple float-end ms-2 texto" asp-controller="Product" asp-action="IndexAdmin">Voltar</a>
            <input type="submit" value="Atualizar" class="btn btn-red float-end texto hoverRoxo" />
        </div>
    </form>
</div>
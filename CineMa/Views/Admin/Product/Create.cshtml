@model Cine_Ma.Models.Product

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["ActiveMenu"] = "Products";
    ViewData["Title"] = "Produtos";
}

<h1 class="texto">Criando Produto</h1>

<hr />

<div class="row">
    <form asp-action="Create" asp-controller="Product" class="form-padrao">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-6">
            <label asp-for="Name" class="control-label texto">Nome</label>
            <input asp-for="Name" class="form-control inputs-padrao" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label asp-for="Category" class="control-label texto">Categoria</label>
            <input asp-for="Category" class="form-control inputs-padrao" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="row g-3 mb-3">
            <div class="form-group col-md-6">
                <label asp-for="Price" class="control-label texto">Preço</label>
                <input asp-for="Price" id="PriceInput" class="form-control inputs-padrao" type="text" oninput="formatPrice(this)" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control inputs-padrao" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
        </div>

        
        <div class="form-group">
            
            <input type="submit" value="Criar" class="btn btn-red float-end" />
        </div>
    </form>
</div>
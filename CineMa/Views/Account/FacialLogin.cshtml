@{
    ViewData["Title"] = "Login Facial";
}

<h2>Login Facial</h2>

<form asp-action="LoginFacial" enctype="multipart/form-data" method="post">
    <label>Tire ou envie uma foto do seu rosto:</label>
    <input type="file" name="photo" accept="image/*" required />
    <button type="submit">Entrar</button>
</form>

@if (ViewBag.Erro != null)
{
    <p style="color:red">@ViewBag.Erro</p>
}

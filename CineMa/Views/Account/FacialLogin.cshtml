@{
    ViewData["Title"] = "Login Facial";
}

<h2>Login Facial</h2>

<form asp-action="LoginFacial" asp-controller="Account" method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label class="form-label">Envie uma foto do rosto:</label>
        <input class="form-control" type="file" name="photo" accept="image/*" required />
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

<div class="mt-3">
    <a asp-controller="Account" asp-action="LoginFacial" class="btn btn-outline-secondary">
        Login com Foto
    </a>
</div>


@if (ViewBag.Erro != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Erro
    </div>
}

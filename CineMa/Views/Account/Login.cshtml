@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Bem-vindo ao CineMa</h1>
            <p class="auth-subtitle">Faça login para continuar</p>
        </div>

        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger auth-alert" role="alert">
                @ViewBag.Erro
            </div>
        }

        <form asp-action="Login" asp-controller="Account" method="post" class="auth-form">
            <div class="form-group-auth">
                <label for="email" class="form-label-auth">E-mail</label>
                <input type="email" name="email" id="email" class="form-input-auth" placeholder="seu@email.com" required />
            </div>

            <div class="form-group-auth">
                <label for="password" class="form-label-auth">Senha</label>
                <input type="password" name="password" id="password" class="form-input-auth" placeholder="••••••••" required />
            </div>

            <button type="submit" class="btn-auth btn-auth-primary">Entrar</button>
        </form>

        <div class="auth-footer">
            <p class="auth-link-text">
                Não tem uma conta?
                <a asp-action="Register" asp-controller="Account" class="auth-link">Cadastre-se</a>
            </p>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineMa</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CineMa.styles.css" asp-append-version="true" />

    <!-- Tipografias -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@600;700;800&display=swap" rel="stylesheet">
</head>

<body class="layout-dark">
    @inject IHttpContextAccessor HttpContextAccessor

    @{
        var nomeUsuario = HttpContextAccessor.HttpContext.Session.GetString("UsuarioNome");
    }

    <!-- NAVBAR DARK MODERNA -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark cinema-navbar mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    CineMa
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarMain" aria-controls="navbarMain"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Início</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>

                    </ul>

                    <ul class="navbar-nav">

                        <li class="nav-item me-2">
                            @if (!string.IsNullOrEmpty(nomeUsuario))
                            {
                                <span class="nav-link">Olá, @nomeUsuario!</span>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            }
                        </li>

                        <li class="nav-item">
                            <form asp-action="Logout" asp-controller="Account" method="post">
                                <button class="btn btn-outline-light btn-sm">Sair</button>
                            </form>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEÚDO -->
    <div class="container pb-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>


@{
    ViewData["Title"] = "Compra Realizada com Sucesso";
    Layout = "_Layout";
}

<!-- HERO CENTRALIZADO COM MENSAGEM DE SUCESSO -->
<section class="hero-cinema mx-auto">
    <div class="hero-overlay"></div>

    <div class="hero-content text-center">
        <div class="success-icon-large mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 4.992 6.932a.75.75 0 0 0-1.084 1.036l3.006 3.007a.75.75 0 0 0 1.08-.022l4.995-5.996a.75.75 0 0 0-.022-1.08z"/>
            </svg>
        </div>
        <h1 class="hero-title">Compra Realizada com Sucesso!</h1>
        <p class="hero-subtitle">Seu pedido foi confirmado e está sendo processado.</p>

        <div class="mt-4 d-flex justify-content-center gap-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                    <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L8.354 1.146ZM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4Z"/>
                </svg>
                Ir para Home
            </a>
            <a href="#" class="btn btn-outline-light btn-lg px-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-receipt" viewBox="0 0 16 16">
                    <path d="M1.92.506a.5.5 0 0 1 .434.14L3 1.293l.646-.647a.5.5 0 0 1 .708 0L5 1.293l.646-.647a.5.5 0 0 1 .708 0L7 1.293l.646-.647a.5.5 0 0 1 .708 0L9 1.293l.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .801.13l.5 1A.5.5 0 0 1 15 2v12a.5.5 0 0 1-.053.224l-.5 1a.5.5 0 0 1-.8.13L13 14.707l-.646.647a.5.5 0 0 1-.708 0L11 14.707l-.646.647a.5.5 0 0 1-.708 0L9 14.707l-.646.647a.5.5 0 0 1-.708 0L7 14.707l-.646.647a.5.5 0 0 1-.708 0L5 14.707l-.646.647a.5.5 0 0 1-.708 0L3 14.707l-.646.647a.5.5 0 0 1-.708 0l-.509-.51a.5.5 0 0 1-.801-.13l-.5-1A.5.5 0 0 1 0 14V2a.5.5 0 0 1 .053-.224l.5-1a.5.5 0 0 1 .336-.27zm.217 1.338L2 2.118v11.764l.137.274.51-.51a.5.5 0 0 1 .707 0l.646.647.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.509.509.137-.274V2.118l-.137-.274-.51.51a.5.5 0 0 1-.707 0L12 1.707l-.646.647a.5.5 0 0 1-.708 0L10 1.707l-.646.647a.5.5 0 0 1-.708 0L8 1.707l-.646.647a.5.5 0 0 1-.708 0L6 1.707l-.646.647a.5.5 0 0 1-.708 0L4 1.707l-.646.647a.5.5 0 0 1-.708 0l-.509-.51z"/>
                    <path d="M3 4.5a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5m0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5m0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5m0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5m8-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5m0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5m0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5m0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5"/>
                </svg>
                Ver Pedidos
            </a>
        </div>
    </div>
</section>

<div class="container">
    
    <!-- CARD DE INFORMAÇÕES DO PEDIDO -->
    <section class="section-block">
        <div class="order-success-card">
            <div class="order-success-header">
                <h3 class="mb-0">Detalhes do Pedido</h3>
                @if (ViewBag.OrderId != null)
                {
                    <span class="order-badge">Pedido #@ViewBag.OrderId</span>
                }
            </div>

            <div class="order-success-content">
                <div class="order-info-item">
                    <span class="order-info-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="m10.97 4.97-.02.022a.75.75 0 1 0 1.043 1.043l.02-.022a.75.75 0 1 0-1.043-1.043m-4.95 2.95a.75.75 0 0 0 0 1.06l2.125 2.125a.75.75 0 0 0 1.06 0l4.125-4.125a.75.75 0 0 0 0-1.06l-4.125-4.125a.75.75 0 0 0-1.06 0L6.02 6.98z"/>
                        </svg>
                        Status
                    </span>
                    <span class="order-info-value status-success">Confirmado</span>
                </div>

                <div class="order-info-item">
                    <span class="order-info-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
                            <path d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V8a1 1 0 0 1 1-1h6V1a1 1 0 0 1 1-1M2 9v6h12V9z"/>
                        </svg>
                        Data da Compra
                    </span>
                    <span class="order-info-value">@DateTime.Now.ToString("dd/MM/yyyy")</span>
                </div>

                <div class="order-info-item">
                    <span class="order-info-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                            <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0"/>
                        </svg>
                        Horário
                    </span>
                    <span class="order-info-value">@DateTime.Now.ToString("HH:mm")</span>
                </div>
            </div>
        </div>
    </section>

    <!-- MENSAGEM FINAL -->
    <section class="section-block text-center">
        <div class="success-message-card">
            <h4 class="mb-3">Obrigado pela sua compra!</h4>
            <p class="text-muted mb-0">
                Você receberá um e-mail de confirmação em breve. 
                Apresente-se no cinema com antecedência para garantir o melhor lugar.
            </p>
        </div>
    </section>

</div>
